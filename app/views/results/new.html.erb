<body class="result_new_body">
    <div class="result_form">
         <p class="search_title result_new_title">成績追加</p>
        <%= form_for @result do |f| %>
            <div class="report_form_group">
                <%= f.label :student_id, '生徒'%>
                <%= f.collection_select :student_id , Student.where(classifying: 2).order(classifying: :ASC, grade: :ASC, family_name_kana: :ASC), :id, :name, {include_blank: '選択してください', selected: @searchparameters[0]}, { class: 'form-control' , required: true, disabled: true} %>
                <%= f.hidden_field :student_id, value: @searchparameters[0] %>
            </div>
            <div class="report_form_group">
                <%= f.label :grade, '学年' %>
                <%= f.select :grade, {'1': 1, '2': 2, '3': 3}, { include_blank: '選択してください', selected: @searchparameters[1]}, { class: 'form-control' , required: true , disabled: true} %>
                <%= f.hidden_field :grade, value: @searchparameters[1] %>
            </div>
            <div class="report_form_group">
                <%= f.label :semester_id, '学期'%>
                <%= f.collection_select :semester_id, Semester.all, :id, :semester, {include_blank: '選択してください', selected: @searchparameters[2]}, { class: 'form-control' , required: true , disabled: true}%>
                <%= f.hidden_field :semester_id, value: @searchparameters[2] %>
            </div>
        <div class="result_num_form">
            <div class="report_form_group">
                <%= f.label :japanese, '国語' %>
                <%= f.radio_button :japanese, "1" %>1
                <%= f.radio_button :japanese, "2" %>2
                <%= f.radio_button :japanese, "3" %>3
                <%= f.radio_button :japanese, "4" %>4
                <%= f.radio_button :japanese, "5" %>5
            </div>
            <div class="report_form_group">
                <%= f.label :social, '社会' %>
