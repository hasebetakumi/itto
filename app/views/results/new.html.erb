                <%= f.radio_button :social, "2" %>2
                <%= f.radio_button :social, "3" %>3
                <%= f.radio_button :social, "4" %>4
                <%= f.radio_button :social, "5" %>5
            </div>
            <div class="report_form_group">
                <%= f.label :math, '数学' %>
