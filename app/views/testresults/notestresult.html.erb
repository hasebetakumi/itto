<body class="result_body">

    <div class="search_group">
        <p class="search_title">定期試験結果未提出者検索</p>
        <form method="get" action="/notestresults">
            <select name="grade_keyword" class="search_box">
                <option value="">選択してください(学年)</option>
                <option value="1">1年</option>
                <option value="2">2年</option>
                <option value="3">3年</option>
            </select>
            <select name="test_keyword" class="search_box">
                <option value="">選択してください(学期)</option>
                <% @tests.each do |test| %>
                    <option value="<%= test.id %>"><%= test.test %></option>
                <% end %>
            </select>
            <p>
                <input type="submit" value="検索" class="search_btn">
                <%= link_to "一覧表示", alltestresults_path, class: "search_btn" %>
            </p>
        </form>
    </div>
    
    <div class="menu_group">
        <%= link_to "定期試験結果検索", noresults_path, class: "report_menu_item" %>
    </div>
    
    <% if @searchparameters.present? %>
        <p class="all_result_title"><%= @searchparameters[0]%>年　<%= @searchparameters[1]%>　の未提出者</p>
    <% end %>
    <div class="all_result">
        <% if @testresults.present? %>
            <table border="1" class="result_table">
                <thead>
                    <tr>
                        <th>生徒ID</th>
                        <th>生徒氏名</th>
                    </tr>
                </thead>
                <tbody>
                    <% @none_students.each do |none_student| %>
                    <tr>
                        <td><%= none_student.id %></td>
                        <td><a href="/students/<%= none_student.id %>" class="result_student_link"><%= none_student.student_info %></a></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        <% end %>
    </div>
</div>